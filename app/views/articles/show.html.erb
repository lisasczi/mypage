<div class="container" id="articlebg">

<br>
      <% if @article.title == "Buddy"%>
          <div class="article_card_buddy">
           <div class="articles_card_title_buddy">
                <h1><%= @article.title %></h1>
              </div>
            <div class="articles_card_photo_buddy">
              <%= image_tag @article.image, alt: "#{@article.title} image"%>
            </div>
          <%else%>
            <div class="article_card">
              <div class="articles_card_photo">
                <%= image_tag @article.image, alt: "#{@article.title} image"%>
                </div>
              <div class="articles_card_title">
                  <h1><%= @article.title %></h1>
                </div>
          <%end%>
              <div class="articles_card_description">
                  <p><%= @article.description %></p>
                </div>
              <div class="captures_ecran">
                  <p>Je vous propose plusieurs captures d'écran pour ce projet.</p>
                </div>
            <% if @article.title == "Buddy"%>
                <div class="photo-slider-buddy">
                    <%= render 'shared/sliderbuddy' %>
                </div>
              <%else%>
                <div class="photo-slider">
                      <%= render 'shared/slider' %>
                  </div>
              <%end%>

   </div>


  <% if @article.title == "Buddy"%>
